			data: {employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id,term_id:term_id,course_id:course_id}
		}).done(function( data ) {
			
			$('#components_ids').empty('');
			$('#components_ids').html(data);
	})	
})

