<script>	
 
	
	function ConfirmDelete()
	{
	var x = confirm("Are you sure you want to delete?");
	if(x)
		return true;
	else
		return false;
	}
$("#cc_name").change(function(){
	
	var course_name=$('#cc_name').val();
	//alert(coursename);
	$.ajax({ 
			type: "POST",
			url:'<?php echo $this->mainconfig['host'].'master/get-course-category';?>',
			data: {course_name:course_name}
		}).done(function( data ) {
			
			if((data!='')){
				alert("This Course Name Exists");
				$("#cc_name").val("");
			}
		 });
});

$('body').on('change','#department_id',function() { 
		var department_id = $('#department_id').val();
		$.ajax({
			type: "POST",
			url:'<?php echo $this->mainconfig['host'].'evaluation-components/ajax-get-employee';?>',
			data: {department_id : department_id}
		}).done(function( data ) {
			
			$('#employee_id').empty('');
			$('#employee_id').html(data);
			
		})	
})
$('body').on('change','#employee_id',function() {  
var employee_id = $('#employee_id').val();
var department_id = $('#department_id').val();
var academic_year_id = $('#academic_year_id').val();
$.ajax({
		type: "POST",
			url:'<?php echo $this->mainconfig['host'].'evaluation-components/ajax-get-terms';?>',
			data: {employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id}
		}).done(function( data ) {
			//alert(data);
			$('#term_ids').empty('');
			$('#term_ids').html(data);
	})
})
var employee_id = $('#employee_id option:selected').val();
var department_id = $('#department_id option:selected').val();
var academic_year_id = $('#academic_year_id option:selected').val();
var component_grade_id = $('#component_grade_id').val();
$.ajax({
		type: "POST",
			url:'<?php echo $this->mainconfig['host'].'evaluation-components/ajax-get-terms';?>',
			data: {employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id,component_grade_id:component_grade_id}
		}).done(function( data ) {
			$('#term_ids').html(data);
			var term_id = $('#term_id option:selected').val();
				$.ajax({
						type: "POST",
							url:'<?php echo $this->mainconfig['host'].'evaluation-components/ajax-get-courses';?>',
							data: {employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id,term_id:term_id,component_grade_id:component_grade_id}
						}).done(function( data ) {
							
							//$('#course_ids').empty('');
							$('#course_ids').html(data);
							var course_id = $('#course_id option:selected').val();

				$.ajax({
					type: "POST",
						url:'<?php echo $this->mainconfig['host'].'evaluation-components/ajax-get-evaluation-components';?>',
						data: {employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id,term_id:term_id,course_id:course_id,component_grade_id:component_grade_id}
					}).done(function( data ) {
						//$('#components_ids').empty('');
						$('#components_ids').html(data);
						
var component_id = $('#component_id option:selected').val();
  //alert(component_id);
var employee_id = $('#employee_id option:selected').val();
var department_id = $('#department_id option:selected').val();
var academic_year_id = $('#academic_year_id option:selected').val();
var course_id = $('#course_id option:selected').val();
 //alert(course_id);
 var term_id = $('#term_id option:selected').val(); 
 //alert(term_id);
       $.ajax({
		    type: "POST",
			   url:'<?php echo $this->mainconfig['host'].'evaluation-components/ajax-get-weightages';?>',
			   data: {component_id : component_id,employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id,term_id:term_id,course_id:course_id}
		  }).done(function( data ) {
			
			  $('#weightage').empty('');
			  var result = $.parseJSON(data);
			   $('#weightage').val(result['weightage']);
	     })
				})
					})
					
			
								})
	
$('body').on('change','#term_id',function() 
{  
var employee_id = $('#employee_id').val();
var department_id = $('#department_id').val();
var academic_year_id = $('#academic_year_id').val();
var term_id = $('#term_id').val();
$.ajax({
		type: "POST",
			url:'<?php echo $this->mainconfig['host'].'evaluation-components/ajax-get-courses';?>',
			data: {employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id,term_id:term_id}
		}).done(function( data ) {
			
			$('#course_ids').empty('');
			$('#course_ids').html(data);
	})

})



