$('body').on('change','#component_id',function() 
{ 
var component_id = $('#component_id').val();
//alert(component_id);
var employee_id = $('#employee_id').val();
var department_id = $('#department_id').val();
var academic_year_id = $('#academic_year_id').val();
var course_id = $('#course_id').val();   
//alert(course_id);
var term_id = $('#term_id').val();
//alert(term_id);
$.ajax({
		type: "POST",
		url:'<?php echo $this->mainconfig['host'].   'evaluation-components/ajax-get-weightages';?>',
			data: {component_id : component_id,employee_id : employee_id,department_id:department_id,academic_year_id:academic_year_id,term_id:term_id,course_id:course_id}
		}).done(function( data ) {
			
			$('#weightage').empty('');
			var result = $.parseJSON(data);
			$('#weightage').val(result['weightage']);
	})

})
</script>