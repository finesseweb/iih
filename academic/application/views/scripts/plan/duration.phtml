    function diffhours(date1 = "01/01/2007 ",date2 = "01/01/2007 "){

    var valuestart = $("#duration_from").val();
    
    var valuestop = $("#duration_to").val();
    
     
    //create date format  
    valuestart = parseTime(valuestart);
        
    valuestop =  parseTime(valuestop);     
    //   alert(valuestart.hh+':'+valuestart.mm+'--'+valuestop.hh+':'+valuestop.mm);
    var timeStart = new Date(date1 + valuestart.hh+':'+valuestart.mm).getHours();
    var timeEnd = new Date(date2 + valuestop.hh+':'+valuestop.mm).getHours();
    
    var minuteStart = new Date(date1 + valuestart.hh+':'+valuestart.mm).getMinutes();
    var minuteEnd = new Date(date2 + valuestop.hh+':'+valuestop.mm).getMinutes();
    
    var hourDiff = timeEnd - timeStart;
        
    var minDiff =  minuteStart - minuteEnd;
        
    if(minDiff<0)
        return hourDiff + ' hrs ' + Math.abs(minDiff) + ' min';
    if(minDiff>0)   
    return (parseInt(hourDiff) -1)  + ' hrs ' + (60 - parseInt(minDiff)) + ' min';
        return hourDiff + ' hrs ' + minDiff + ' min';
    }

function parseTime(s) {
    var part = s.match(/(\d+):(\d+)(?: )?(am|pm)?/i);
    var hh = parseInt(part[1], 10);
    var mm = parseInt(part[2], 10);
    var ap = part[3] ? part[3].toUpperCase() : null;
    if (ap === "AM") {
        if (hh == 12) {
            hh = 0;
        }
    }
    if (ap === "PM") {
        if (hh != 12) {
            hh += 12;
        }
    }
    return { hh: hh, mm: mm };
}

