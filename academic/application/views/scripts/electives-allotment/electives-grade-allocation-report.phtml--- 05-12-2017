<script>
$(document).ready(function(){
	$('#batch').hide();
});
$('body').on('change','#department_id',function(){  
var department_id = $('#department_id').val();
$.ajax({
			type: "POST",
			url:'<?php echo $this->mainconfig['host'].'grade-allocation/ajax-get-employee';?>',
			data: {department_id : department_id}
		}).done(function( data ) {
			
			$('#employee_id').empty('');
			$('#employee_id').html(data);
			
		})	
})
$('body').on('change','#employee_id',function(){ 
	var employee_id  = $('#employee_id').val();
	var department_id = $('#department_id').val();
	var academic_year_id = $('#academic_id').val();
	if(academic_year_id && department_id && employee_id){
	$.ajax({
	type: "POST",
			url:'<?php echo $this->mainconfig['host'].'electives-allotment/ajax-get-electives-grade-details-data';?>',
			data: {department_id : department_id,employee_id:employee_id,academic_year_id:academic_year_id}
	
	}).done(function( data ) {
		
		
		var result = $.parseJSON( data );
	    if(result !=0){
		 alert('Selected Faculty is already Existed');
         $('#employee_id option:selected').remove();
		}
       else{
         var eval_component_id = $('#eval_component_id').val();
		// $('#btn').attr('disabled',false);
		 $.ajax({
		 type: "POST",
			url:'<?php echo $this->mainconfig['host'].'electives-allotment/ajax-get-electives-grade-details';?>',
			data: {department_id : department_id,employee_id:employee_id,academic_year_id:academic_year_id}
			
			}).done(function( data ) {
				
			$('#grade_details').empty('');
			$('#grade_details').html(data);
		});

        }	   
	  });
	}
	
})


 function view_grades(val){
		var id = val;
		 
		
		 $.ajax({
              type: "POST",
               url:"<?php echo $this->mainconfig['host'].'electives-allotment/ajax-get-electives-grade-details-view';?>",
              data: {id:id}
            }).done(function(data) {
				$(".sub").hide();
				$(data).insertAfter("tr.id"+id);
			});
		 
		 
	 }

 $('body').on('change', '#academic_id', function() {		
var academic_id=$('#academic_id').val();
   if(academic_id){
   $('#batch').show();
	$.ajax({ 
			type: "POST",
			url:'<?php echo $this->mainconfig['host'].'master/ajax-get-batch-code';?>',
			data: {academic_id:academic_id}
		}).done(function( data ) {
			var result = $.parseJSON(data);
			if((data!='')){
				$('#batch').val(result['short_code']);
			}
	  });
	 }
	 
 });
</script>