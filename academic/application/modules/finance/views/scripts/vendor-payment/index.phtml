<script>
    $("document").ready(function() {
        checkPaymentInputs();
        $("input:radio[name='payment_by']").change(function() {
            checkPaymentInputs();
        });
    });

    function checkPaymentInputs() {
        var payment_by = $("input:radio[name ='payment_by']:checked").val();
        if (payment_by == 1) {
            $(".bank-paymentby-check,.payment-mode,.bank-paymentby-dd").hide();
        }
        if (payment_by == 2) {
            $(".bank-paymentby-check,.payment-mode").show();
            $(".bank-paymentby-dd").hide();
        }
        if (payment_by == 3) {
            $(".payment-mode,.bank-paymentby-dd").show();
            $(".bank-paymentby-check").hide();
        }

    }
    $(document).ready(function() {
        $("body").on("change", "#purchase_invoice_id", function(event) {
            var id = $(this).val();
            if (id) {
                $(".pop-loading").show();
                $.ajax({type: "POST", url: "<?php echo $this->mainconfig['host'] . 'invoice/purchase/get-invoice-details'; ?>",
                    data: {id: id}}).done(function(data) {
                    $(".invoice-data").html(data);
                    setTimeout(function() {
                        $(".pop-loading").hide();
                    }, 300);

                });
            }
        });
    });
    $.tyre_invoice_id = $("#purchase_invoice_id").val();
    if ($.tyre_invoice_id) {
        var id = $.tyre_invoice_id;
        $.ajax({type: "POST", url: "<?php echo $this->mainconfig['host'] . 'invoice/purchase/get-invoice-details'; ?>", data: {id: id}}).done(function(data) {
            $(".invoice-data").html(data);
        });
    }

</script>